<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<ScrollPane xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@../../assets/styles/modal.css" style="-fx-background-color: -background-900"
            fx:controller="prog.projeto.controllers.provider.ServiceFormController">
    <VBox alignment="CENTER" spacing="8.0" styleClass="background">
        <Label text="Serviço">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
        <TextField fx:id="nameField" promptText="Nome"/>
        <TextField fx:id="priceField" promptText="Preço"/>
        <Button mnemonicParsing="false" onAction="#save" text="Guardar"/>
        <padding>
          <Insets bottom="16.0" left="16.0" right="16.0" top="16.0"/>
        </padding>
    </VBox>
</ScrollPane>
